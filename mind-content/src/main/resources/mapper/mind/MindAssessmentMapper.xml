<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.pj.mind.mapper.MindAssessmentMapper">

    <resultMap type="MindAssessment" id="MindAssessmentResult">
        <result property="assessmentId"    column="assessment_id"    />
        <result property="assessmentName"    column="assessment_name"    />
        <result property="num"    column="num"    />
        <result property="picUrl"    column="pic_url"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
    </resultMap>

    <sql id="selectMindAssessmentVo">
        select assessment_id, assessment_name, num, pic_url, create_by, create_time, update_by, update_time from mind_assessment
    </sql>

    <select id="selectMindAssessmentList" parameterType="MindAssessment" resultMap="MindAssessmentResult">
        <include refid="selectMindAssessmentVo"/>
        <where>
            <if test="assessmentName != null  and assessmentName != ''"> and assessment_name like concat('%', #{assessmentName}, '%')</if>
        </where>
    </select>

    <select id="selectMindAssessmentByAssessmentId" parameterType="Long" resultMap="MindAssessmentResult">
        <include refid="selectMindAssessmentVo"/>
        where assessment_id = #{assessmentId}
    </select>

    <insert id="insertMindAssessment" parameterType="MindAssessment" useGeneratedKeys="true" keyProperty="assessmentId">
        insert into mind_assessment
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="assessmentName != null and assessmentName != ''">assessment_name,</if>
            <if test="num != null">num,</if>
            <if test="picUrl != null and picUrl != ''">pic_url,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="assessmentName != null and assessmentName != ''">#{assessmentName},</if>
            <if test="num != null">#{num},</if>
            <if test="picUrl != null and picUrl != ''">#{picUrl},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
        </trim>
    </insert>

    <update id="updateMindAssessment" parameterType="MindAssessment">
        update mind_assessment
        <trim prefix="SET" suffixOverrides=",">
            <if test="assessmentName != null and assessmentName != ''">assessment_name = #{assessmentName},</if>
            <if test="num != null">num = #{num},</if>
            <if test="picUrl != null and picUrl != ''">pic_url = #{picUrl},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
        </trim>
        where assessment_id = #{assessmentId}
    </update>

    <delete id="deleteMindAssessmentByAssessmentId" parameterType="Long">
        delete from mind_assessment where assessment_id = #{assessmentId}
    </delete>

    <delete id="deleteMindAssessmentByAssessmentIds" parameterType="String">
        delete from mind_assessment where assessment_id in
        <foreach item="assessmentId" collection="array" open="(" separator="," close=")">
            #{assessmentId}
        </foreach>
    </delete>
</mapper>
