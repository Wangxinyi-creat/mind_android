<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.pj.mind.mapper.MindBannerMapper">
    
    <resultMap type="MindBanner" id="MindBannerResult">
        <result property="id"    column="id"    />
        <result property="title"    column="title"    />
        <result property="pictureUrl"    column="picture_url"    />
        <result property="sorted"    column="sorted"    />
        <result property="status"    column="status"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateTime"    column="update_time"    />
    </resultMap>

    <sql id="selectMindBannerVo">
        select id, title, picture_url, sorted, status, create_time, update_time from mind_banner
    </sql>

    <select id="selectMindBannerList" parameterType="MindBanner" resultMap="MindBannerResult">
        <include refid="selectMindBannerVo"/>
        <where>  
            <if test="title != null  and title != ''"> and title = #{title}</if>
            <if test="status != null "> and status = #{status}</if>
        </where>
    </select>
    
    <select id="selectMindBannerById" parameterType="Long" resultMap="MindBannerResult">
        <include refid="selectMindBannerVo"/>
        where id = #{id}
    </select>
        
    <insert id="insertMindBanner" parameterType="MindBanner" useGeneratedKeys="true" keyProperty="id">
        insert into mind_banner
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="title != null">title,</if>
            <if test="pictureUrl != null and pictureUrl != ''">picture_url,</if>
            <if test="sorted != null">sorted,</if>
            <if test="status != null">status,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateTime != null">update_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="title != null">#{title},</if>
            <if test="pictureUrl != null and pictureUrl != ''">#{pictureUrl},</if>
            <if test="sorted != null">#{sorted},</if>
            <if test="status != null">#{status},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateTime != null">#{updateTime},</if>
         </trim>
    </insert>

    <update id="updateMindBanner" parameterType="MindBanner">
        update mind_banner
        <trim prefix="SET" suffixOverrides=",">
            <if test="title != null">title = #{title},</if>
            <if test="pictureUrl != null and pictureUrl != ''">picture_url = #{pictureUrl},</if>
            <if test="sorted != null">sorted = #{sorted},</if>
            <if test="status != null">status = #{status},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteMindBannerById" parameterType="Long">
        delete from mind_banner where id = #{id}
    </delete>

    <delete id="deleteMindBannerByIds" parameterType="String">
        delete from mind_banner where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>