<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.pj.mind.mapper.MindActivityMapper">
    
    <resultMap type="MindActivity" id="MindActivityResult">
        <result property="activityId"    column="activity_id"    />
        <result property="activityName"    column="activity_name"    />
        <result property="activityTime"    column="activity_time"    />
        <result property="location"    column="location"    />
        <result property="details"    column="details"    />
        <result property="appointmentStatus"    column="appointment_status"    />
        <result property="capacity"    column="capacity"    />
        <result property="capacityNow"    column="capacity_now"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
    </resultMap>

    <sql id="selectMindActivityVo">
        select activity_id, activity_name, activity_time, location, details, appointment_status, capacity, capacity_now, create_by, create_time, update_by, update_time from mind_activity
    </sql>

    <select id="selectMindActivityList" parameterType="MindActivity" resultMap="MindActivityResult">
        <include refid="selectMindActivityVo"/>
        <where>  
            <if test="activityName != null  and activityName != ''"> and activity_name like concat('%', #{activityName}, '%')</if>
            <if test="activityTime != null "> and activity_time = #{activityTime}</if>
            <if test="location != null  and location != ''"> and location = #{location}</if>
            <if test="details != null  and details != ''"> and details = #{details}</if>
            <if test="appointmentStatus != null "> and appointment_status = #{appointmentStatus}</if>
        </where>
    </select>
    
    <select id="selectMindActivityByActivityId" parameterType="Long" resultMap="MindActivityResult">
        <include refid="selectMindActivityVo"/>
        where activity_id = #{activityId}
    </select>
        
    <insert id="insertMindActivity" parameterType="MindActivity" useGeneratedKeys="true" keyProperty="activityId">
        insert into mind_activity
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="activityName != null and activityName != ''">activity_name,</if>
            <if test="activityTime != null">activity_time,</if>
            <if test="location != null and location != ''">location,</if>
            <if test="details != null and details != ''">details,</if>
            <if test="appointmentStatus != null">appointment_status,</if>
            <if test="capacity != null">capacity,</if>
            <if test="capacityNow != null">capacity_now,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="activityName != null and activityName != ''">#{activityName},</if>
            <if test="activityTime != null">#{activityTime},</if>
            <if test="location != null and location != ''">#{location},</if>
            <if test="details != null and details != ''">#{details},</if>
            <if test="appointmentStatus != null">#{appointmentStatus},</if>
            <if test="capacity != null">#{capacity},</if>
            <if test="capacityNow != null">#{capacityNow},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
         </trim>
    </insert>

    <update id="updateMindActivity" parameterType="MindActivity">
        update mind_activity
        <trim prefix="SET" suffixOverrides=",">
            <if test="activityName != null and activityName != ''">activity_name = #{activityName},</if>
            <if test="activityTime != null">activity_time = #{activityTime},</if>
            <if test="location != null and location != ''">location = #{location},</if>
            <if test="details != null and details != ''">details = #{details},</if>
            <if test="appointmentStatus != null">appointment_status = #{appointmentStatus},</if>
            <if test="capacity != null">capacity = #{capacity},</if>
            <if test="capacityNow != null">capacity_now = #{capacityNow},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
        </trim>
        where activity_id = #{activityId}
    </update>

    <delete id="deleteMindActivityByActivityId" parameterType="Long">
        delete from mind_activity where activity_id = #{activityId}
    </delete>

    <delete id="deleteMindActivityByActivityIds" parameterType="String">
        delete from mind_activity where activity_id in 
        <foreach item="activityId" collection="array" open="(" separator="," close=")">
            #{activityId}
        </foreach>
    </delete>
</mapper>