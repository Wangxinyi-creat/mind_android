<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.pj.mind.mapper.MindCategoryMapper">
    
    <resultMap type="MindCategory" id="MindCategoryResult">
        <result property="id"    column="id"    />
        <result property="title"    column="title"    />
        <result property="pid"    column="pid"    />
        <result property="tag"    column="tag"    />
        <result property="iconUrl"    column="icon_url"    />
        <result property="sorted"    column="sorted"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateTime"    column="update_time"    />
    </resultMap>

    <sql id="selectMindCategoryVo">
        select id, title, pid, tag, icon_url, sorted, create_time, update_time from mind_category
    </sql>

    <select id="selectMindCategoryList" parameterType="MindCategory" resultMap="MindCategoryResult">
        <include refid="selectMindCategoryVo"/>
        <where>  
            <if test="title != null  and title != ''"> and title like concat('%', #{title}, '%')</if>
            <if test="pid != null "> and pid = #{pid}</if>
        </where>
    </select>
    
    <select id="selectMindCategoryById" parameterType="Long" resultMap="MindCategoryResult">
        <include refid="selectMindCategoryVo"/>
        where id = #{id}
    </select>
        
    <insert id="insertMindCategory" parameterType="MindCategory" useGeneratedKeys="true" keyProperty="id">
        insert into mind_category
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="title != null and title != ''">title,</if>
            <if test="pid != null">pid,</if>
            <if test="tag != null">tag,</if>
            <if test="iconUrl != null">icon_url,</if>
            <if test="sorted != null">sorted,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateTime != null">update_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="title != null and title != ''">#{title},</if>
            <if test="pid != null">#{pid},</if>
            <if test="tag != null">#{tag},</if>
            <if test="iconUrl != null">#{iconUrl},</if>
            <if test="sorted != null">#{sorted},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateTime != null">#{updateTime},</if>
         </trim>
    </insert>

    <update id="updateMindCategory" parameterType="MindCategory">
        update mind_category
        <trim prefix="SET" suffixOverrides=",">
            <if test="title != null and title != ''">title = #{title},</if>
            <if test="pid != null">pid = #{pid},</if>
            <if test="tag != null">tag = #{tag},</if>
            <if test="iconUrl != null">icon_url = #{iconUrl},</if>
            <if test="sorted != null">sorted = #{sorted},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteMindCategoryById" parameterType="Long">
        delete from mind_category where id = #{id}
    </delete>

    <delete id="deleteMindCategoryByIds" parameterType="String">
        delete from mind_category where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>