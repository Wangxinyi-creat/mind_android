<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/roundbackground_white_top_24dp"
    android:orientation="vertical"
    android:padding="@dimen/dp_18">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_close" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="评论" />

        <TextView
            android:id="@+id/tv_fapinglun"
            android:layout_width="@dimen/dp_64"
            android:layout_height="@dimen/dp_24"
            android:background="@drawable/btn_fense"
            android:gravity="center"
            android:text="发布评论"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_12" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/dp_16"
        android:padding="@dimen/dp_12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/roundbackground_efefef_12">
        <EditText
            android:id="@+id/editText"
            android:layout_width="match_parent"
            android:gravity="top"
            android:layout_height="@dimen/dp_120"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请输入评论内容"
            android:textColor="@color/black"
            android:textColorHint="@color/color8F97A1"
            android:textSize="14sp" />
    </LinearLayout>



</LinearLayout>

